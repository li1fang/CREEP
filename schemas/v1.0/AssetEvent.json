{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "schema://creep/AssetEvent.v1.0",
  "title": "AssetEvent",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "event_id": {
      "type": "string",
      "format": "uuid"
    },
    "tenant_id": {
      "type": "string",
      "minLength": 1
    },
    "project_id": {
      "type": "string"
    },
    "env": {
      "type": "string"
    },
    "asset_id": {
      "type": "string",
      "format": "uuid"
    },
    "task_id": {
      "type": "string",
      "format": "uuid"
    },
    "lease_id": {
      "type": "string",
      "format": "uuid"
    },
    "correlation_id": {
      "type": "string"
    },
    "causation_id": {
      "type": "string",
      "format": "uuid"
    },
    "event_type": {
      "type": "string",
      "minLength": 1
    },
    "source": {
      "type": "string"
    },
    "severity": {
      "type": "string",
      "enum": [
        "DEBUG",
        "INFO",
        "WARN",
        "ERROR"
      ]
    },
    "old_status": {
      "type": "string"
    },
    "new_status": {
      "type": "string"
    },
    "message": {
      "type": "string"
    },
    "error_code": {
      "type": "string"
    },
    "error_message": {
      "type": "string"
    },
    "provider_status": {
      "type": "string"
    },
    "http_status": {
      "type": "integer",
      "minimum": 100,
      "maximum": 599
    },
    "latency_ms": {
      "type": "integer",
      "minimum": 0
    },
    "retryable": {
      "type": "boolean"
    },
    "occurred_at": {
      "type": "string",
      "format": "date-time"
    },
    "recorded_at": {
      "type": "string",
      "format": "date-time"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "context": {
      "type": "object"
    },
    "version": {
      "type": "integer",
      "minimum": 1
    }
  },
  "required": [
    "event_id",
    "tenant_id",
    "asset_id",
    "event_type",
    "occurred_at",
    "recorded_at",
    "version"
  ]
}
