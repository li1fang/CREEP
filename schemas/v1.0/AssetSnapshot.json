{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "schema://creep/AssetSnapshot.v1.0",
  "type": "object",
  "properties": {
    "asset_id": {
      "type": "string",
      "format": "uuid"
    },
    "tenant_id": {
      "type": "string"
    },
    "project_id": {
      "type": "string"
    },
    "env": {
      "type": "string"
    },
    "sku_category": {
      "type": "string",
      "enum": [
        "RAW_NET",
        "RAW_FUND",
        "INFRA",
        "LOGIC",
        "PRODUCT",
        "IDENTITY"
      ]
    },
    "sku_code": {
      "type": "string"
    },
    "provider_id": {
      "type": "string"
    },
    "batch_id": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": [
        "NEW",
        "READY",
        "LOCKED",
        "IN_USE",
        "COOLING",
        "SOLD",
        "BANNED",
        "ARCHIVED"
      ]
    },
    "health_score": {
      "type": "number",
      "minimum": 0,
      "maximum": 100
    },
    "usage_count": {
      "type": "integer",
      "minimum": 0
    },
    "fail_count": {
      "type": "integer",
      "minimum": 0
    },
    "last_status_change_at": {
      "type": "string",
      "format": "date-time"
    },
    "last_used_at": {
      "type": "string",
      "format": "date-time"
    },
    "concurrency_mode": {
      "type": "string",
      "enum": [
        "EXCLUSIVE",
        "SHARED"
      ]
    },
    "concurrency_limit": {
      "type": "integer",
      "minimum": 1
    },
    "current_concurrency": {
      "type": "integer",
      "minimum": 0
    },
    "active_lease_id": {
      "type": "string",
      "format": "uuid"
    },
    "currency": {
      "type": "string",
      "pattern": "^[A-Z]{3}$"
    },
    "acquisition_cost": {
      "type": "number",
      "minimum": 0
    },
    "estimated_unit_cost": {
      "type": "number",
      "minimum": 0
    },
    "expected_value": {
      "type": "number"
    },
    "quality_flags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "meta_spec": {
      "type": "object"
    },
    "meta_state": {
      "type": "object"
    },
    "meta_schema_version": {
      "type": "string"
    },
    "snapshot_version": {
      "type": "integer",
      "minimum": 1
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "asset_id",
    "tenant_id",
    "sku_category",
    "sku_code",
    "provider_id",
    "status",
    "currency",
    "acquisition_cost",
    "meta_spec",
    "meta_state",
    "concurrency_mode",
    "concurrency_limit",
    "current_concurrency",
    "snapshot_version",
    "created_at",
    "updated_at"
  ],
  "additionalProperties": false
}
